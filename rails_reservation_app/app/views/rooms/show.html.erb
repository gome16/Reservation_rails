<div class="container-fuluid"> 
  <div class="container" >
      <div class="row">
        <%= link_to "戻る", :back,class:"mt-3 col-9" %>
        <% if @room.user.id == current_user.id %>
          <%= link_to "編集", :edit_room, class:"mt-3 col-2" %>
        <% end %>
      </div>
    <div class="mt-5">
      <div class="row">
        <%= attachment_image_tag @room, :image,fallback: "no-image.png",class:"mt-3 col-12"%>               
      </div>
    </div>
    <div class="mt-5">
      <div class="row">
        <div class="col-md-3">
          <%= @room.roomname %>
        </div>
      </div>
    </div>
    <div class="mt-5">
      <div class="row">
        <div class="col-md-3">
          <%= @room.detail%>
        </div>
      </div>
    </div>

    <div class="mt-5">
      <div class="row">
        <div class="col-md-3">
          <%= @room.price%>
        </div>
      </div>
    </div>
  </div>
  
  <%= form_for @reservation, method: :post, url: confirm_reservations_path do |f| %>

    <%= f.label :check_in %>
    <%= f.text_field :check_in %>

    <%= f.label :check_out %>
    <%= f.text_field :check_out %>


    <%= f.label :number %>
    <%= f.text_field :number %>

    <%= f.hidden_field :room_id%>

    <%= f.submit "予約", class: 'btn btn-primary' %>

  <% end %>

  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
</div>