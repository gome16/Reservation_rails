<h3>予約一覧</h3>
<table>
 <thead>
    <tr>
      <th class=col-4>施設名</th>
      <th class=col-4>詳細</th>
      <th class=col-4>住所</th>
      <th class=col-4>料金</th>
      <th class=col-4>開始日</th>
      <th class=col-4>終了日</th>
      <th class=col-4>人数</th>
      <th class=col-4>予約確定日</th>
    </tr>
 </thead>

  <tbody>
      <% @reservations.each do |reservation|%>
        <tr>
          <td class=col-4><%= link_to reservation.roomname, room_path(reservation.room_id) %></td>
          <td class=col-4><%= reservation.detail %></td>
          <td class=col-4><%= reservation.address %></td>
          <td class=col-4>¥<%= reservation.total %></td>
          <td class=col-4><%= reservation.check_in.to_s(:creteatime_jp) %></td>
          <td class=col-4><%= reservation.check_out.to_s(:creteatime_jp) %></td>
          <td class=col-4><%= reservation.number %></td>
          <td class=col-4><%= reservation.created_at.to_s(:datetime_jp) %></td>
        </tr>
      <% end %>
  </tbody>
</table>


