<div class="container-fuluid"> 
  <div class="container" >
    <div class="mt-4">
      <div class="row">
         <p class="col-md-6 lead border-bottom">プロフィール</p>
          <%= link_to "アカウント", account_user_path(@user), class:"col-md-6 lead"%>
      </div>
    </div>
      <div class="mt-5">
       <div class="row">
          <div class="col">
            <%= attachment_image_tag @user, :profile_image, fallback: "no-userimage.png",class:"col-md-2" %> 
          </div>
        </div>
      </div>
      <div class="mt-5">
        <div class="row">
          <div class="col-md-3">
            <p>ユーザーネーム</p>
          </div>
          <div class="col-md-5">
            <%= @user.username %>
          </div>
        </div>
      </div>
      <div class="mt-5">
        <div class="row">
          <div class="col-md-3">
            <p>プロフィール</p>
          </div>
          <div class="col-md-5">
            <%= @user.profile %>
          </div>
        </div>
          <%= link_to '編集', edit_user_path(@user), class:"btn btn-primary" %>
    </section>
  </div>
</div>

