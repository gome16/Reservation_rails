<div class= container> 
  <div class="mb-5"> 
    <h1>プロフィール設定</h1>
  </div>
  <section class="section">
    <div class="container">
      <%= form_for @user do |f| %>
      <div class="mb-5">
        <div class="row">
          <%= f.label :profile_image, "プロフィール画像", class:"col-md-4" %>
          <%= f.attachment_field :profile_image, class:"col-md-6" %>
        </div>
      </div>
      <div class="mb-5">
        <div class="row">
          <%= f.label :username, "ユーザーネーム", class:"col-md-4"%>
          <%= f.text_field :username, class:"col-md-5" %>
        </div>
      </div>
      <div class="mb-5">
        <div class="row">
          <%= f.label :profile, "プロフィール", class:"col-md-4" %>
          <%= f.text_field :profile, class:"col-md-5" %>
        </div>
      </div>
      
        <div class="form-group">
          <%= f.submit('更新', class:'btn btn-primary mt-3 col-md-9')%>
        </div>
      <% end%>

      <%= link_to'キャンセル',user_path(@user), class:"btn btn-outline-dark col-md-9" %>
    </div>
  </section>
</div>