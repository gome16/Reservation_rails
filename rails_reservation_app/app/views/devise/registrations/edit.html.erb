<div class="container"> 
  <div class="mb-5"> 
    <h2>アカウント編集</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if @user.errors.any? %>
    <% end %>

    <div class="mb-5">
       <div class="row">
        <%= f.label :email,"ユーザーメール", class:"mr-5" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"ml-3"%>
        <% if @user.errors.include?(:email) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
    </div>

    <div class="mb-5">
      <div class="row">
        <%= f.label :password,"更新するパスワード",class:"mr-4"%>
        <%= f.password_field :password, autocomplete: "new-password",class:"ml-2" %>
        <% if @user.errors.include?(:password) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password).first %>
        <% end %>
      </div>
    </div>

    <div class="mb-5">
      <div class="row">
        <%= f.label :password_confirmation,"確認用パスワード",class:"mr-5"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <% if @user.errors.include?(:password_confirmation) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
    </div>
    </div>
  
    <div class="mb-5">
      <div class="row">
        <%= f.label :current_password,"現在のパスワード",class:"mr-5"%> 
        <%= f.password_field :current_password, autocomplete: "current-password" %>
        <% if @user.errors.include?(:current_password) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:current_password).first %>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-primary col-md-9' %>
    </div>
  <% end %>

  <%= link_to "Back", :back,class:"btn btn-outline-dark  mt-3 col-md-9" %>
</div>